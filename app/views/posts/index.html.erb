<div class="columns is-centered mt-1">
  <div class="column is-one-third">
    <h1 class="title is-1">Posts</h1>

    <% @posts.each do |post| %>
      <div class="content is-spaced">
        <h2 class="title is-2"><%= link_to post.title, post %></h2>
        <% if user_signed_in? %>
          <h3 class="subtitle is-4"><%= post.user.username %></h3>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
