<div class="columns is-centered mx-1 my-1">
  <div class="column is-half">
    <div class="content">
      <p class="title is-1"><%= @post.title %></p>
      <% if user_signed_in? %>
      <p class="subtitle is-3">By: <%= @post.user.username %>
      <% end %>
      <p><%= @post.body %></p>
    </div>

    <div class="field is-grouped">
      <% if user_signed_in? && current_user.id == @post.user_id %>
      <div class="control">
        <%= link_to 'Edit', edit_post_path(@post), class: 'button is-link' %>
      </div>
      <% end %>
      <div class="control">
        <%= link_to 'Back', posts_path, class: 'button is-light' %>
      </div>
      <% if user_signed_in? && current_user.id == @post.user_id %>
      <div class="control" style="margin-left: auto;"></div>
        <%= link_to 'Delete', post_path, class: 'button is-danger', method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
      </div>
      <% end %>
    </div>
  </div>
</div>
