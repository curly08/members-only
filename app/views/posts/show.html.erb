<div class="content">
  <p class="title is-1"><%= @post.title %></p>
  <% if user_signed_in? %>
  <p class="subtitle is-3">By: <%= @post.user.username %>
  <% end %>
  <p><%= @post.body %></p>
</div>

<% if user_signed_in? && current_user.id == @post.user_id %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
<% if user_signed_in? && current_user.id == @post.user_id %> |
<%= link_to 'Delete', post_path, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
<% end %>
