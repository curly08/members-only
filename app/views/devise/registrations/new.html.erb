<div class="columns is-centered mt-1">
  <div class="column is-one-third">
    <p class="title">Sign Up</p>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="field">
        <div class="control">
          <%= f.input :name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "name" },
                      label: 'Name',
                      label_html: { class: 'label' },
                      input_html: { class: "input"},
                      wrapper: false, required: true, autofocus: true %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :username,
                      required: true,
                      input_html: { autocomplete: "username" },
                      label: 'Username',
                      label_html: { class: 'label' },
                      input_html: { class: "input"},
                      wrapper: false %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :email,
                      required: true,
                      input_html: { autocomplete: "email" },
                      label: 'Email',
                      label_html: { class: 'label' },
                      input_html: { class: "input"},
                      wrapper: false %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      label: 'Password',
                      label_html: { class: 'label' },
                      input_html: { class: "input"},
                      wrapper: false %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      label: 'Confirm Password',
                      label_html: { class: 'label' },
                      input_html: { class: "input"},
                      wrapper: false %>
        </div>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <%= f.button :submit, 'Sign Up', class: 'button is-primary' %>
        </div>
        <div class="control">
          <%= link_to 'Cancel', posts_path, class: 'button is-light' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
